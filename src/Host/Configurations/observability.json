{
  "ObservabilityOptions": {
    "AppName": "modular-monolith",
    "AppVersion": "1.0.0",
    "MinimumLevel": "Debug",
    "MinimumLevelOverrides": {
      "Microsoft": "Warning",
      "Hangfire": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Warning",
      "MassTransit": "Warning"
    },
    "WriteToConsole": true,
    "WriteToFile": true,
    "LogGeneratedSqlQueries": true,
    "ResponseTimeThresholdInMs": 1000,
    "OtlpLoggingEndpoint": "http://localhost:5341/ingest/otlp/v1/logs",
    "OtlpLoggingProtocol": "HttpProtobuf",
    "EnableMetrics": true,
    "OtlpMetricsUsePrometheusDirectly": true,
    //    "OtlpMetricsEndpoint": "http://localhost:4317",
    //    "OtlpMetricsProtocol": "HttpProtobuf",
    "EnableTracing": true,
    "OtlpTracingEndpoint": "http://localhost:4317",
    "OtlpTracingProtocol": "HttpProtobuf"
  }
}
